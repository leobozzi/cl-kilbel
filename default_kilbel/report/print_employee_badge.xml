<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ajuste Imprimir Insignias -->
        <template id="custom_print_employee_badge" inherit_id="hr.print_employee_badge">

            <xpath expr="//div[@class='page']" position="replace">
                <t t-foreach="docs" t-as="employee">
                    <div class="d-inline-block">
                        <table class="table"
                            style="width:243pt; height:153pt; border: 2pt solid black; border-collapse:separate;
                        border-radius:8pt; margin:5pt;">
                            <tr>
                                <td style="width:25%;" align="center">
                                    <img class="img img-responsive"
                                        src="/default_kilbel/static/src/img/logo_kilbel_90.jpg"
                                        style="height:60%;max-width:90%;margin-top:10pt;"
                                        alt="Company Logo" />
                                </td>
                                <td style="width:75%;" align="center">
                                    <table class="table table-sm" style="border: 0pt;">
                                        <tr style="border: 0pt;">
                                            <td>
                                                <div
                                                    style="font-size:15pt; font-weight: bold;"
                                                    align="center">
                                                    <t
                                                        t-esc="employee.name" />
                                                </div>
                                            </td>
                                        </tr>
                                        <tr style="border: 0pt;">
                                            <td>
                                                <div align="center"
                                                    style="font-size:12pt;margin-bottom:2pt;">
                                                    <t
                                                        t-esc="employee.x_studio_legajo" />
                                                </div>
                                            </td>
                                        </tr>
                                        <tr style="border: 0pt;">
                                            <td>
                                                <div align="center"
                                                    style="font-size:10pt;margin-bottom:5pt;">
                                                    <t
                                                        t-esc="employee.first_contract_date"
                                                        t-options='{"widget": "date","format": "dd-MM-yyyy"}' />
                                                </div>
                                            </td>
                                        </tr>
                                        <tr style="border: 0pt;">
                                            <td><!--
                                                <t t-if="employee.barcode">
                                                    <img alt="Barcode" t-if="len(employee.barcode) == 13"
                                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'
                                                % ('EAN13', employee.barcode, 600, 120)"
                                                style="width:100%;height:3rem;"/>
                                                    <img alt="Barcode" t-elif="len(employee.barcode) == 8"
                                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'
                                                % ('EAN8', employee.barcode, 600, 120)"
                                                style="width:100%;height:3rem;"/>
                                                    <img alt="Barcode" t-else=""
                                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'
                                                % ('Code128', employee.barcode, 600, 120)"
                                                style="width:100%;height:3rem"/>
                                                </t>
                                                <t t-else=""><span class="text-muted">No barcode</span></t>
                                                -->
                                                <div t-if="employee.barcode"
                                                    t-field="employee.barcode"
                                                    t-options="{'widget': 'barcode',
                            'width': 600, 'height': 120, 'img_style':
                            'max-height:3rem;max-width:100%;', 'img_align': 'center'}" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                                <!--
                                    <tr>
                                        <td>
                                            <div align="center"
                                                style="font-size:12pt;margin-bottom:2pt;">
                                                <t
                                                    t-esc="employee.x_studio_legajo" />
                                            </div>
                                        </td>
                                    </tr>
                                    
                                    <tr>
                                        <td>
                                            <div align="center"
                                                style="font-size:10pt;margin-bottom:5pt;">
                                                <t
                                                    t-esc="employee.first_contract_date" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div t-if="employee.barcode"
                                                t-field="employee.barcode"
                                                t-options="{'widget': 'barcode',
                        'width': 600, 'height': 120, 'img_style':
                        'max-height:50pt;max-width:100%;', 'img_align': 'center'}" />
                                        </td>
                                    </tr>
                                    -->
                            </tr>
                        </table>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
    